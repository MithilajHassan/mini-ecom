<%- include('../layouts/footer') -%>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctxP = document.getElementById('productChart')
    const products = JSON.parse(ctxP.getAttribute('data-products'))
    const productQty = JSON.parse(ctxP.getAttribute('data-productQty'))
    new Chart(ctxP, {
    type: 'bar',
    data: {
        labels: products,
        datasets: [{
        label: 'Products',
        data: productQty,
        borderWidth: 2
        }]
    },
    options: {
        scales: {
            x: {
                ticks: {
                    color: 'black',
                    // font: {
                    //     weight: 'bold'
                    // }
                }
            },
            y: {
                ticks: {
                    color: 'black' ,
                    beginAtZero: true,
                    precision: 0,
                    callback: function(value) {
                        if (value % 1 === 0) {
                            return value;
                        }
                    }
                }
            }
        }
    }
    })
    const ctxB = document.getElementById('brandChart')
    const brands = JSON.parse(ctxB.getAttribute('data-brands'))
    new Chart(ctxB, {
    type: 'bar',
    data: {
        labels: brands,
        datasets: [{
        label: 'Brands',
        data: productQty,
        borderWidth: 1
        }]
    },
    options: {
        scales: {
            x: {
                ticks: {
                    color: 'black'
                }
            },
            y: {
                ticks: {
                    color: 'black' ,
                    beginAtZero: true,
                    precision: 0,
                    callback: function(value) {
                        if (value % 1 === 0) {
                            return value;
                        }
                    }
                }
            }
        }
    }
    })

    const ctxC = document.getElementById('categoryChart')
    const category = JSON.parse(ctxC.getAttribute('data-category'))
    new Chart(ctxC, {
    type: 'pie',
    data: {
        labels: Object.keys(category),
        datasets: [{
        label: 'Category',
        data: Object.values(category),
        borderWidth: 1
        }]
    },
    options: {

    }
    })
  </script>