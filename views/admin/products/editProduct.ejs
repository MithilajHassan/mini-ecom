}
const brand = ()=>{
    const pBrand = document.getElementById('pBrand').value.trim()
    if(pBrand.match(/^(?=.*[a-zA-Z])[a-zA-Z ]{3,20}$/)){
        return true
    }else{
        msg.innerHTML = "Enter proper brand name"
