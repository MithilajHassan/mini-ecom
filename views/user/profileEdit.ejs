const name = ()=>{
    const user = document.getElementById('userName').value.trim()
    if(user.match(/^[a-zA-Z_]{4,15}$/)){
        return true
    }else{
        msg.innerHTML = "Enter your proper name and remove space"
        return false
    }
}
function mobileNo(){
    const num = document.getElementById('mno').value
    if(num.match(/^[0-9]{10,10}$/)){
        return true
    }else{
        msg.innerHTML = "Enter 10 digits as a mobile number"
        return false
    }
}

function validate(){
    if(name() && mobileNo()){
        return true
    }else{
        return false
    }
}

