<%- include('../layouts/header') -%>

 <!--------------------------- section of body --------------------------->
 <section class="bg-clr text-white d-flex align-items-center">
    <div class="container mt-3  d-flex justify-content-center">
        <div class="log-box-ful row bg-white text-black">
            <div class="dis-part1 col-md-4 pt-5 pb-2">
                <h2 class="fw-bold mb-3">Password</h2>
                <p>Change your password, Please enter your new password</p>
                <img class="crtn-img img-fluid mx-auto" src="img/cartoon.png">
            </div>
            <div class="col-md-8 my-auto text-center">
                <% if(locals.mes){ %>
                    <p class="text-primary"><%= mes %></p>
                <% } %> 
                <form action="/changePassword" class="mb-3" method="post">
                    <input class="form-inp" type="password" name="newPassword" placeholder="Enter your new password" required>
                    <input type="hidden" name="id" value="<%= userId %>">
                    <button type="submit" class="log-btn w-100 mt-3 ">Change</button>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('../layouts/footer') -%>