<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>   
<script>

const menuDiv = document.getElementById('menu-div')
const menubarShow = ()=>{
    if (menuDiv.style.display == 'none') {
        menuDiv.style.display = 'block'
    } else {
        menuDiv.style.display = 'none'
        menuDiv.style.position = 'absolute'
    }
}

const passwordInput = document.getElementById('password-inp')
const cnfrmPass = document.getElementById('cnfrmPass-inp')
function showPass (){  
    passwordInput.getAttribute('type') === 'password' ? passwordInput.setAttribute('type','text') : passwordInput.setAttribute('type','password')
    cnfrmPass.getAttribute('type') === 'password' ? cnfrmPass.setAttribute('type','text') : cnfrmPass.setAttribute('type','password')
}
function showCurrentPass (){  
    const currentPass = document.getElementById('currentPass-inp')
    currentPass.getAttribute('type') === 'password' ? currentPass.setAttribute('type','text') : currentPass.setAttribute('type','password')
}


const msg = document.getElementById('msg')

const pswrd = ()=>{
    const pass = passwordInput.value
    if(pass.match(/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()-_=+\[\]{}|;:'",.<>?/]).{8,16}$/)){
        if(cnfrmPass.value === pass){
            return true
        }else{
            msg.innerHTML = "Passwords are mismatch"
            return false  
        }
        
    }else{
        msg.innerHTML = "Password at least 8 characters contain a mix of letters, numbers, and special characters"
        return false
    }
}

function validate(){
    if(pswrd()){
        return true
    }else{
        return false
    }
}

</script>
