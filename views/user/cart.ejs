                                                    <input type="hidden" name="productId" value="<%= item.product._id %>">
                                                    <button class="btn btn-danger ms-4" type="button" onclick="myConfirm('<%= item.product._id %>')"><i class="fa-solid fa-trash-can"></i></button>
                                                </form>
