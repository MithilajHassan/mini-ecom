    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    

    const updateTotalAmount = (price,operator) => {
        const priceR = document.getElementById('priceR')
        const totalR = document.getElementById('totalR')
        let totalAmount = totalR.getAttribute('data-totalAmount')
        let newAmount 
        if (operator === '+') {
            newAmount = parseInt(totalAmount) + parseInt(price)
        } else {
            newAmount = parseInt(totalAmount) - parseInt(price)
        }
         
        priceR.innerText = '₹' + newAmount;
        totalR.innerText = '₹' + newAmount;
        totalR.setAttribute('data-totalAmount', newAmount);
    }

    const decreaseQuantity = async(productId,price)=> {
        const quantityInput = document.getElementById(`quantity_${productId}`)
        if (quantityInput.value > 1) {
            const response = await axios.post('/cartQMinus',{productId})
            
            if (response.data.success) {              
                quantityInput.value = parseInt(quantityInput.value) - 1
                updateTotalAmount(price,'-')
            }
        }
    }
    const increaseQuantity = async(productId,quantity,price)=> {  
        const quantityInput = document.getElementById(`quantity_${productId}`)
        if (quantityInput.value < 10 ) {
            const response = await axios.post('/cartQPlus',{productId})
            
            if (response.data.success) {                 
                quantityInput.value = parseInt(quantityInput.value) + 1
                updateTotalAmount(price,'+')
            }else{
                Swal.fire({
                    title: "Stock Over",
                    text: "We're sorry Stock is over.",
                    icon: "info"
                })
            }
        } else {
            Swal.fire({
                    title: "Over",
                    text: "We're sorry. Only 10 unit(s) allowed in each order",
                    icon: "info"
                })
        }
    }

    const myConfirm = async (id)=>{
        try {
            const result = await Swal.fire({
            title: "Are you sure?",
            text: "You want to remove this item?",
            icon: "question",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Remove it",
            reverseButtons: true
        })

        if (result.isConfirmed) {
            document.getElementById(`delete-${id}`).submit()
        }
        } catch (err) {
            console.error(err)
        }    
    }
    </script>
