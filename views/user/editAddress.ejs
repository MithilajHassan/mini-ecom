<script src="/js/script.js"></script>
<script>

const msg = document.getElementById('msg')

function pin(){
    const pincode = document.getElementById('pincode').value.trim()
    if (pincode.match(/^[0-9]{6,6}$/)) {
        return true
    }else{
        msg.innerHTML = "Enter Correct pincode"
        return false
    }
}

const name = ()=>{
    const user = document.getElementById('name').value.trim()
    if(user.match(/^(?=.*[a-zA-Z])[a-zA-Z ]{4,18}$/)){
        return true
    }else{
        msg.innerHTML = "Enter your proper name"
        return false
    }
}
function mobileNo(){
    const num = document.getElementById('mno').value.trim()
    console.log(num);
    if(num.match(/^[0-9]{10,10}$/)){
        return true
    }else{
        msg.innerHTML = "Enter 10 digits as a mobile number"
        return false
    }
}
const adrs = ()=>{
    const address = document.getElementById('address').value.trim()
    if(address.match(/^(?=.*[a-zA-Z])[0-9a-zA-Z-,()'. ]{15,100}$/)){
        return true
    }else{
        msg.innerHTML = "Enter Proper Address"
        return false
    }
}
const district = ()=>{
    const district = document.getElementById('district').value.trim()
    if(district.match(/^[a-zA-Z- ]{3,18}$/)){
        return true
    }else{
        msg.innerHTML = "Enter Your district"
        return false
    }
}
const state = ()=>{
    const state = document.getElementById('state').value.trim()
    if(state.match(/^[a-zA-Z- ]{3,18}$/)){
        return true
    }else{
        msg.innerHTML = "Enter Your State"
        return false
    }
}
const city = ()=>{
    const city = document.getElementById('city').value.trim()
    if(city.match(/^[a-zA-Z- ]{3,18}$/)){
        return true
    }else{
        msg.innerHTML = "Enter Your city"
        return false
    }
}

function validate(){
    if(name() && mobileNo() && pin() && adrs() && state() && district() && city()){
        return true
    }else{
        return false
    }
}

</script>
