<script>
    
const passwordInput = document.getElementById('password-inp')
const cnfrmPass = document.getElementById('cnfrmPass-inp')
function showPass (){  
    passwordInput.getAttribute('type') === 'password' ? passwordInput.setAttribute('type','text') : passwordInput.setAttribute('type','password')
    cnfrmPass.getAttribute('type') === 'password' ? cnfrmPass.setAttribute('type','text') : cnfrmPass.setAttribute('type','password')
} 

const msg = document.getElementById('errMsg')
function mobileNo(){
    const num = document.getElementById('mno').value
    if(num.match(/^(?!0{5})[0-9]{10}$/)){
        return true
    }else{
        msg.innerHTML = "Enter 10 digits as a mobile number"
        return false
    }
}


function email(){
    const mail = document.getElementById('newEmail').value.trim()
    if (mail.match(/^[a-zA-Z0-9._%+-]{3,}@[a-zA-Z0-9.]{3,}\.[a-zA-Z]{2,}$/)) {
        return true;
    }else{
        msg.innerHTML = "Enter proper Email"
        return false
    }
}
const pswrd = ()=>{
    const pass = passwordInput.value
    if(pass.match(/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()-_=+\[\]{}|;:'",.<>?/]).{8,16}$/)){
        if(cnfrmPass.value === pass){
            return true
        }else{
            msg.innerHTML = "Passwords are mismatch"
            return false  
        }
        
    }else{
        msg.innerHTML = "Password at least 8 characters contain a mix of letters, numbers, and special characters"
        return false
    }
}
const name = ()=>{
    const user = document.getElementById('userName').value.trim()
    if(user.match(/^[a-zA-Z_]{4,15}$/)){
        return true
    }else{
        msg.innerHTML = "Enter your proper name and remove space"
        return false
    }
}

function validate(){
    if(name() &&  mobileNo() && email() && pswrd()){
        return true
    }else{
        return false
    }
}
</script>
