<%- include('../layouts/header') -%>

<!--------------------------- section of body --------------------------->
<div class="container py-3 z-0 bg-white p-3">
    <div class="row">
        <div class="col-md-5 border-end">         
            <div class="d-flex justify-content-center mb-1" id="zoom-div">
                <img src="<%= product.images[0].path.replace('public', '') %>" class="zoom-img border border-success img-fluid w-75"> 
            </div>
            <div class="d-flex justify-content-center">
            <% product.images.forEach( (value) =>{ %>
                <a href=""><div class="border border-dark px-2 ms-2">
                    <img src="<%= value.path.replace('public', '') %>"  class="object-fit-contain" style="width: 3rem;">
                </div></a>
            <% }) %>
            </div>
        </div> 
             
        <div class="col-md-7">
            <div class="mt-5">
                <h4 class="ms-3 " style="color: #a3a2a2;"><b><%= product.brand %></b></h4>
                <h5 class="ms-3 "><b><%= product.name %></b></h5>
                <h4 class="ms-3 fw-bold text-success">â‚¹<%= product.price %></h4>
                <p class="ms-3 text-black"><%= product.description %></p>
            </div>
                
            <div class="mt-5">
                <button class="btn fw-bold" style="background-color: #ff9f00;">ADD TO CART</button>
                <button class="btn fw-bold" style="background-color: #fb641b;">ADD TO WISHLIST</button>
            </div>
        </div>      
     </div>
</div>


<%- include('../layouts/footer') -%>