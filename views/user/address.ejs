<script>  
const deleteAddress = async (userId, index) => {
  try {
      if (confirm("Do you want delete ?") == true) {
          const response = await axios.post(`/deleteAddress`,{userId,index})
      if (response.status === 200) {
        const adrsContainer = document.getElementById(`address-${index}`)
            if (adrsContainer) {
                adrsContainer.remove()
            }
          console.log('Address deleted successfully')
      } else {
